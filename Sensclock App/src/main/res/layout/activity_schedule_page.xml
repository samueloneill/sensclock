<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".schedulePage"
    android:background="#00BCD4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schedTitleTextView"
            android:layout_width="320dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:background="#2236B1"
            android:gravity="center"
            android:text="Schedule Settings"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/addNewTextView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#512236B1"
                android:gravity="center"
                android:text="Add New Task:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/timeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Time"/>

            <EditText
                android:id="@+id/detailsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Type Activity Here"
                android:inputType="text" />
        </LinearLayout>

        <Button
            android:id="@+id/confirmSchedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Confirm"/>

        <TextView
            android:id="@+id/viewSchedTextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:background="#512236B1"
            android:gravity="center"
            android:text="Your Schedule:"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t1TextView"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:background="#512236B1"
                    android:gravity="center"
                    android:hint="Task 1"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t2TextView"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="#512236B1"
                    android:gravity="center"
                    android:hint="Task 2"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/t3TextView"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="#512236B1"
                    android:gravity="center"
                    android:hint="Task 3"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/t4TextView"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="#512236B1"
                    android:gravity="center"
                    android:hint="Task 4"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/t5TextView"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="#512236B1"
                    android:gravity="center"
                    android:hint="Task 5"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/t1DelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>

                <Button
                    android:id="@+id/t2DelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>

                <Button
                    android:id="@+id/t3DelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>

                <Button
                    android:id="@+id/t4DelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>

                <Button
                    android:id="@+id/t5DelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>